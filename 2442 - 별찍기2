#include <stdio.h>
#include <stdlib.h>

int main()
{
    int i,j,n;
    scanf("%d",&n);
    for(i = 1; i <n+1; i++){
        for(j = n -i -1; j>-1; j--){
            printf(" ");
        }for(j = 0; j <=i-1; j++){
            printf("*");
            }for( j = 0; j<i-1 ; j++){
                printf("*");
                }printf("\n");

    }
}
